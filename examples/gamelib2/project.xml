<?xml version="1.0" encoding="utf-8"?>
<project>	
	<meta title="Gamelib2 OpenFL HTML5 Test" package="com.pirongames.examples.gamelib2" version="1.0.0" company="Piron Games" />
	<app main="GameLib2Test" path="export" file="GameLib2Test" />
	
	<window orientation="landscape" background="#000000" fps="25" antialiasing="0" resizable="false" />
	<window width="640" height="480" unless="mobile" />
	
	<haxeflag name="-D ImprovedAnimFinished" />
	
	<source path="..\..\src" />
	<source path="src" />
	
	<haxelib name="openfl" />
    <haxelib name="swf" />
	
	<assets path="assets/strings" rename="strings">
      <binary id="Data_Lang" path="langlib" />
    </assets>

	<assets path="assets/sprites" rename="sprites">
      <binary id="Data_SprLib" path="sprlib" />
    </assets>

    <assets path="assets/fonts" rename="fonts" include="*.ttf" />

    <library path="assets/swf/gamelogo_text.swf" id="Swf_GameLogoText" preload="true"/>
    
</project>